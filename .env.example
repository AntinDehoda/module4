# OpenAI API Key (обов'язково)
OPENAI_API_KEY=your-openai-api-key-here

# Model settings (опціонально)
DEFAULT_MODEL=gpt-4o-mini
TEMPERATURE=0.7

# MCP Sequential Thinking (опціонально)
ENABLE_MCP_THINKING=true

# Use Real MCP Server (true) or Simple Wrapper (false)
# true - підключається до справжнього MCP sequential-thinking сервера (потребує npx)
# false - використовує простий Python wrapper
USE_REAL_MCP=true

# Search settings (опціонально)
MAX_SEARCH_RESULTS=3
